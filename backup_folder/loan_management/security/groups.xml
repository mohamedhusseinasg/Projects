<odoo>
    <record id="loan_management" model="ir.module.category">

        <field name="name">Loan management</field>

    </record>
    <record id="group_employee" model="res.groups">
        <field name="name">Employee</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="loan_management.loan_management"/>

    </record>
    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="loan_management.loan_management"/>
    </record>
    <record id="group_hr_id" model="res.groups">
        <field name="name">HR</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="loan_management.loan_management"/>
    </record>
    <record id="group_financial_manager_id" model="res.groups">
        <field name="name">Financial Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="loan_management.loan_management"/>
    </record>

</odoo>